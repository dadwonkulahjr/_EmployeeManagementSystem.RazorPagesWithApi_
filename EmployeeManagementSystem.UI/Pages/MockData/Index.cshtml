@page
@model EmployeeManagementSystem.UI.Pages.MockData.IndexModel
@{
    ViewData["Title"] = "Mock Data";
}

<h4 class="display-4">
    Mock Data Repository<i class="oi oi-dashboard"></i>
</h4>
<hr />

@if (Model.Employees.Any())
{
    <h4 class="text-success">
        Record currently in Memory!
    </h4>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <tr>
                <td>
                    First Name
                </td>
                <td>
                    Last Name
                </td>
                <td>
                    Email
                </td>
                <td>
                    Gender
                </td>
                <td>
                    Salary
                </td>
                <td>
                    Department
                </td>
                <td>
                    Skill
                </td>
                <td>
                    Photo
                </td>
            </tr>
            @foreach (var emp in Model.Employees)
            {
                <tbody>
                    <tr>
                        <td>
                            @emp.FirstName
                        </td>
                        <td>
                            @emp.LastName
                        </td>
                        <td>
                            @emp.Email
                        </td>
                        <td>
                            @emp.Gender
                        </td>
                        <td>
                            @emp.Salary.Value.ToString("c")
                        </td>
                        <td>
                            @emp.DepartmentId.ToString()
                        </td>
                        <td>
                            @emp.SkillId.ToString()
                        </td>
                        <td>
                           <img src="@emp.PhotoPath" style="width:30px" class="rounded-circle" />
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>

}
else
{
    <div class="card-deck">
        <div class="card mt-2">
            <div class="card-header">
                <h3 class="card-title">
                    No record yet to be display!
                </h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Click on the button below to create new record
                </h5>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12">
                        <a asp-page="#" class="btn btn-outline-primary p-3 w-100">
                            Create new record
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}